<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#101610">

    <tatar.eljah.ShuvyrGameView
        android:id="@+id/shuvyr_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <tatar.eljah.SpectrogramView
        android:id="@+id/spectrogram_view"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_gravity="bottom"
        android:visibility="gone" />

    <TextView
        android:id="@+id/current_note_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="10dp"
        android:background="#55202720"
        android:paddingLeft="12dp"
        android:paddingTop="6dp"
        android:paddingRight="12dp"
        android:paddingBottom="6dp"
        android:text="@string/current_note_placeholder"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/mode_toggle"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginEnd="8dp"
            android:background="#55303A2E"
            android:contentDescription="@string/main_mode_normal"
            android:padding="8dp"
            android:src="@drawable/ic_mode_spectrogram"
            android:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/lips_button"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="#55303A2E"
            android:contentDescription="@string/main_lips_button"
            android:padding="8dp"
            android:src="@drawable/ic_lips"
            android:tint="@android:color/white" />
    </LinearLayout>

</FrameLayout>
